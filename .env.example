# Finnhub API Configuration
# =========================

# Your Finnhub API key (required)
# Get your free or premium API key from: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# Storage directory for project data and exports (required)
# Default: ~/Documents/finnhub-data
FINNHUB_STORAGE_DIR=/Users/yourusername/Documents/finnhub-data


# MCP Server Configuration
# =========================

# Maximum tokens to use for output (default: 75000)
# Conservative limit assuming 75% of 100k context window used
FINNHUB_SAFE_TOKEN_LIMIT=75000

# Rate limiting (requests per minute, default: 60 for free tier, 300 for premium)
# Free tier: 60 calls/min | Premium tier: 300+ calls/min
FINNHUB_RATE_LIMIT_RPM=60

# Request timeout in seconds (default: 30)
FINNHUB_REQUEST_TIMEOUT=30

# Enable request caching (default: true)
FINNHUB_ENABLE_CACHE=true

# Cache TTL in seconds (default: 300 = 5 minutes)
FINNHUB_CACHE_TTL=300


# Tool Enable/Disable Configuration
# ==================================
# Set to "true" to enable, "false" to disable
# All tools are enabled by default for premium users
# Disable unused tools to reduce context window usage

# Core Trading & Analysis Tools (8 tools)
# ----------------------------------------

# Technical Analysis: Indicators, patterns, signals, support/resistance
# MANDATORY TOOL - Required for technical analysis workflows
FINNHUB_ENABLE_TECHNICAL_ANALYSIS=true

# Stock Market Data: Quote, candles, tick, BBO, symbols
# MANDATORY TOOL - Required for price data workflows
FINNHUB_ENABLE_STOCK_MARKET_DATA=true

# News & Sentiment: Market news, company news, sentiment scores
# MANDATORY TOOL - Required for news analysis workflows
FINNHUB_ENABLE_NEWS_SENTIMENT=true

# Stock Fundamentals: Profile, financials, metrics, earnings, dividends
FINNHUB_ENABLE_STOCK_FUNDAMENTALS=true

# Stock Estimates: Revenue/EPS/EBIT/EBITDA estimates, price targets, recommendations
FINNHUB_ENABLE_STOCK_ESTIMATES=true

# Stock Ownership: Insider trades, institutional ownership, congressional trades
FINNHUB_ENABLE_STOCK_OWNERSHIP=true

# Alternative Data: ESG, social sentiment, supply chain, patents, lobbying
FINNHUB_ENABLE_STOCK_ALTERNATIVE_DATA=true

# SEC Filings: SEC filings, transcripts, presentations, sentiment analysis
FINNHUB_ENABLE_STOCK_FILINGS=true


# Multi-Asset Market Data Tools (6 tools)
# ----------------------------------------

# Forex: Exchange rates, candles, symbols
FINNHUB_ENABLE_FOREX=false

# Crypto: Crypto prices, candles, symbols, exchanges
FINNHUB_ENABLE_CRYPTO=false

# ETF: ETF profiles, holdings, exposure, country/sector weights
FINNHUB_ENABLE_ETF=true

# Mutual Funds: Fund profiles, holdings, NAV, performance
FINNHUB_ENABLE_MUTUAL_FUND=false

# Bonds: Bond profiles, prices, tick data
FINNHUB_ENABLE_BOND=false

# Indices: Index constituents, historical data
FINNHUB_ENABLE_INDEX=true


# Discovery & Screening Tools (2 tools)
# --------------------------------------

# Screening: Stock screeners by market cap, volume, fundamentals
FINNHUB_ENABLE_SCREENING=true

# Calendar: IPO calendar, earnings calendar, economic events
FINNHUB_ENABLE_CALENDAR=true


# Economic & Specialized Data Tools (2 tools)
# --------------------------------------------

# Economic Data: Indicators, calendars, central bank data
FINNHUB_ENABLE_ECONOMIC=true

# Specialized Data: Merger arbitrage, SPAC data, aggregated indicators
FINNHUB_ENABLE_SPECIALIZED=true


# Management Tools (5 tools) - ALWAYS ENABLED
# --------------------------------------------
# These tools cannot be disabled as they manage projects and jobs

# FINNHUB_ENABLE_PROJECT_CREATE=true      # Always enabled
# FINNHUB_ENABLE_PROJECT_LIST=true        # Always enabled
# FINNHUB_ENABLE_JOB_STATUS=true          # Always enabled
# FINNHUB_ENABLE_JOB_LIST=true            # Always enabled
# FINNHUB_ENABLE_JOB_CANCEL=true          # Always enabled


# Tool-Specific Configuration
# ===========================

# Technical Analysis
# ------------------
# Default indicator resolution (1, 5, 15, 30, 60, D, W, M)
FINNHUB_DEFAULT_INDICATOR_RESOLUTION=D

# Default lookback period in days for indicators
FINNHUB_DEFAULT_INDICATOR_LOOKBACK=90


# Stock Market Data
# -----------------
# Default candle resolution (1, 5, 15, 30, 60, D, W, M)
FINNHUB_DEFAULT_CANDLE_RESOLUTION=D

# Default candle lookback period in days
FINNHUB_DEFAULT_CANDLE_LOOKBACK=365


# News & Sentiment
# ----------------
# Maximum news articles to return per query (default: 50)
FINNHUB_MAX_NEWS_ARTICLES=50

# Default news lookback period in days
FINNHUB_DEFAULT_NEWS_LOOKBACK=30


# CSV Export Configuration
# ========================

# CSV delimiter (default: comma)
FINNHUB_CSV_DELIMITER=,

# CSV include headers (default: true)
FINNHUB_CSV_INCLUDE_HEADERS=true

# CSV date format (default: YYYY-MM-DD)
FINNHUB_CSV_DATE_FORMAT=%Y-%m-%d


# Background Job Configuration
# ============================

# Maximum concurrent background jobs (default: 5)
FINNHUB_MAX_CONCURRENT_JOBS=5

# Job timeout in seconds (default: 3600 = 1 hour)
FINNHUB_JOB_TIMEOUT=3600

# Auto-cleanup completed jobs after N seconds (default: 86400 = 24 hours)
FINNHUB_JOB_CLEANUP_AFTER=86400


# Logging Configuration
# =====================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
FINNHUB_LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
# FINNHUB_LOG_FILE=/var/log/mcp-finnhub.log


# Development Configuration
# =========================

# Enable debug mode (default: false)
# WARNING: Debug mode includes sensitive information in logs
FINNHUB_DEBUG=false

# Mock API responses for testing (default: false)
FINNHUB_MOCK_RESPONSES=false
